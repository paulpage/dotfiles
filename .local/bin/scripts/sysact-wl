# A dmenu wrapper script for Hyprland system functions.
export WM="hyprland"
case "$(readlink -f /sbin/init)" in
    *systemd*) ctl='systemctl' ;;
    *) ctl='loginctl' ;;
esac

lock() {
    playerctl pause
    hyprlock &
    sleep 1  # give the lock a moment to initialize
    playerctl play
}

case "$(printf "ğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew $WM\nğŸ» hibernate\nğŸ”ƒ reboot\nğŸ–¥ï¸ shutdown\nğŸ’¤ sleep\nğŸ“º display off" | bemenu -i -p 'Action: ')" in
    'ğŸ”’ lock') lock ;;
    "ğŸšª leave $WM") hyprctl dispatch exit ;;
    "â™»ï¸ renew $WM") hyprctl reload ;;
    'ğŸ» hibernate') $ctl hibernate -i ;;
    'ğŸ’¤ sleep') $ctl suspend -i ;;
    'ğŸ”ƒ reboot') $ctl reboot -i ;;
    'ğŸ–¥ï¸ shutdown') $ctl poweroff -i ;;
    'ğŸ“º display off') sleep 0.1 && hyprctl dispatch dpms off ;;
    *) exit 1 ;;
esac
